<Window
    x:Class="XamlAnimatedGif.Demo.BasicTestsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="BasicTestsWindow"
    Width="525"
    Height="350">
    <StackPanel>
        <TextBox Name="txtFileName" />
        <Button
            Name="btnBrowse"
            Click="BtnBrowse_OnClick"
            Content="Browse..." />
        <Button
            Name="btnTestLzw"
            Click="BtnTestLzw_OnClick"
            Content="Test LZW decompression" />
        <Button
            Name="btnDumpMetadata"
            Click="BtnDumpMetadata_OnClick"
            Content="Dump metadata" />
        <Button
            Name="btnTestStream"
            Click="BtnTestStream_OnClick"
            Content="Using stream" />
        <Button
            Name="btnTestBrush"
            Click="BtnTestBrush_OnClick"
            Content="Brush" />
    </StackPanel>
</Window>